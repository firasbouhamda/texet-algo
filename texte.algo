ALGORITHM sentence
VAR
i : INTEGER;
l,nbmot,nbvoy : INTEGER := 0;
s : STRING;
c : CHAR;

BEGIN
read (c)
WHILE (c <> '.') DO
    write ("hello put a sentence.")
END_WHILE
read (s)
FOR i FROM 0 TO length.s-1 DO
    l := l+1;


IF (c =" ") THEN
    nbmot := nbmot+1;
END_IF
IF (s[i]= 'a'or s[i];='i' or s[i];='e' or s[i]:='o' or s[i]:='u' or s[i]:='y' THEN
    nbvoy := nbvoy+1;
END_IF

END_FOR
read(l)
read(nbmot)
read(nbvoy)
END